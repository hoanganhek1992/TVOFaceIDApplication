<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.new_lending.finish.FinishLendingActivity">

    <include
        android:id="@+id/finish_lending_toolbar"
        layout="@layout/view_toolbar" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="320dp"
        android:layout_below="@+id/finish_lending_toolbar"
        android:layout_marginTop="@dimen/default_margin_large"
        android:scaleType="centerInside"
        android:src="@drawable/lending_finish_success"
        tools:ignore="ContentDescription" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/lending_continue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/default_margin_medium"
        android:backgroundTint="@color/blue"
        android:padding="@dimen/default_margin_medium"
        android:text="@string/text_create_new"
        app:cornerRadius="@dimen/default_radius_large" />

</RelativeLayout>